{
    "$schema": "http://gss-cogs.github.io/family-schemas/dataset-schema-1.1.0.json",
    "id": "ons-balance-of-payments",
    "title": "Balance of Payments",
    "publisher": "Office for National Statistics",
    "description": "Quarterly summary of balance of payments accounts including the current account, capital transfers, transactions and levels of UK external assets and liabilities.",
    "landingPage": "https://www.ons.gov.uk/economy/nationalaccounts/balanceofpayments/datasets/balanceofpaymentsstatisticalbulletintables",
    "datasetNotes": [
        "On landing page, link to latest release page, Link to \"View all data in this statistical bulletin, Balance of Payments time Series"
    ],
    "published": "2019-12-20",
    "families": [
        "Trade"
    ],
    "extract": {
        "source": "CSV, XLS",
        "stage": "Prioritized"
    },
    "transform": {
        "airtable": "rec01iOHi8PJSYkiB",
        "main_issue": 1,
        "columns": {
            "Period": {
                "type": "dimension",
                "uri": "http://purl.org/linked-data/sdmx/2009/dimension#refPeriod",
                "value": "http://reference.data.gov.uk/id/{period}"
            },
            "CDID": {
                "type": "dimension",
                "uri": "http://gss-data.org.uk/def/trade/property/dimension/cdid",
                "value": "http://gss-data.org.uk/def/trade/concept/cdid/{cdid}"
            },
            "Seasonal Adjustment": {
                "type": "dimension",
                "uri": "http://gss-data.org.uk/def/trade/property/dimension/seasonal-adjustment",
                "value": "http://gss-data.org.uk/def/trade/concept/seasonal-adjustments/{seasonal_adjustment}"
            },
            "Flow Directions": {
                "type": "dimension",
                "uri": "http://gss-data.org.uk/def/trade/property/dimension/flow-directions",
                "value": "http://gss-data.org.uk/def/trade/concept/flow-directions/{flow_directions}"
            },
            "Measure Type": {
                "type": "dimension",
                "uri": "http://purl.org/linked-data/cube#measureType",
                "value": "http://gss-data.org.uk/def/trade/measure/{measure_type}",
                "types": [
                    "summary-of-balance-of-payments",
                    "current-account",
                    "current-account-excluding-precious-metals",
                    "current-account-transactions-with-the-european-union-eu-and-with-non-eu-countries",
                    "summary-of-international-investment-position-financial-account-and-investment-income",
                    "trade-in-goods",
                    "trade-in-services",
                    "primary-income",
                    "secondary-income",
                    "capital-account",
                    "financial-account",
                    "international-investment-position"
                ]
            },
            "Value": {
                "type": "observations",
                "datatype": "double",
                "measure": "http://gss-data.org.uk/def/measure/current-prices",
                "unit": "http://gss-data.org.uk/def/concept/measurement-units/gbp-million"
            },
            "Marker": {
                "type": "attribute",
                "uri": "http://purl.org/linked-data/sdmx/2009/attribute#obsStatus",
                "value": "http://gss-data.org.uk/def/concept/cogs-markers/{marker}"
            }
        }
    },
    "sizingNotes": "",
    "notes": ""
}